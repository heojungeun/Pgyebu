<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="SignUpViewModel"
            type="com.example.pgyebu.view.signup.SignUpViewModel" />
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.signup.SignupActivity"
        android:background="@color/white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="25dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/header_logo"
                android:src="@drawable/mark_blue_circle_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="70dp"
                />

            <EditText
                android:id="@+id/edit_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_edit"
                android:hint="ID"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/round_edit"
                android:hint="PASSWORD"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textSize="16sp" />

            <TextView
                android:text="숫자, 문자, 특수문자를 포함한 8~16자이어야 합니다."
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"/>

            <EditText
                android:id="@+id/edit_pw_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_edit"
                android:hint="PASSWORD CONFIRM"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_edit"
                android:hint="NAME"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/round_edit"
                android:hint="E-MAIL"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_signup"
                android:text="회원가입"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/round_btn_login"
                android:onClick="@{()->SignUpViewModel.onSignupButtonClick()}"/>

        </LinearLayout>

        <TextView
            android:id="@+id/footer_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAEDON"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>